{
  "name": "nidio",
  "private": true,
  "description": "Nidio monorepo",
  "version": "0.1.0",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=20.6.0"
  },
  "scripts": {
    "build": "tsc -b -v tsconfig.build.json",
    "clean": "tsc -b tsconfig.build.json --clean && rimraf node_modules packages/*/dist",
    "lint": "eslint \"packages/*/src/**/*.ts\"",
    "test": "vitest run",
    "release": "changeset version && npm run build && changeset publish"
  },
  "dependencies": {},
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "@eslint/js": "^9.14.0",
    "@types/node": "^22.7.4",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.3.3",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.8.1",
    "vitest": "^3.2.4"
  }
}