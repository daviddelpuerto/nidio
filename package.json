{
  "name": "nidio",
  "private": true,
  "description": "Nidio monorepo",
  "version": "0.0.0",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=20.6.0"
  },
  "scripts": {
    "changeset:version": "changeset version",
    "changeset:publish": "npm run build && changeset publish",
    "build": "tsc -b -v tsconfig.build.json",
    "build:force": "tsc -b -v --force tsconfig.build.json",
    "rebuild": "npm run clean && npm run build",
    "clean": "tsc -b tsconfig.build.json --clean && rimraf packages/*/dist",
    "typecheck": "tsc -b -v --pretty false --emitDeclarationOnly tsconfig.build.json",
    "lint": "eslint \"packages/*/src/**/*.{ts,mts,cts}\"",
    "test": "vitest run",
    "release": "changeset version && npm run build && changeset publish",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "@eslint/js": "^9.14.0",
    "@types/node": "^22.17.2",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.3.3",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.8.1",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "packages/*/src/**/*.ts": [
      "eslint --max-warnings=0 --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": "prettier --write"
  }
}
