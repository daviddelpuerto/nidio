{
  "compilerOptions": {
    "target": "ES2023",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true,

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "newLine": "lf",

    "esModuleInterop": true,

    "baseUrl": ".",
    "paths": {
      "@nidio/toolkit": ["packages/toolkit/dist/index.d.ts"],
      "@nidio/engine": ["packages/engine/dist/index.d.ts"],
      "@nidio/cli": ["packages/cli/dist/index.d.ts"]
    }
  }
}
